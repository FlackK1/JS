      <h3> Tehtävä 6 </h3>
      <p> Keskiarvon laskeminen kaksiulotteisella taulukolla. </p>
<div class="koodi"><pre>
<div>
   <input type="number" id="R1"><br><br>
    <input type="number" id="R2"><br><br>
    <input type="number" id="R3"><br><br>

    <button onclick="laskeKeskiarvo1()">Laske keskiarvo</button>
</div>

<p id="laskua1"></p>

<script>
    function laskeKeskiarvo1() {
       
        var luku1 = parseFloat(document.getElementById("num1").value) || 0;
        var luku2 = parseFloat(document.getElementById("num2").value) || 0;
        var luku3 = parseFloat(document.getElementById("num3").value) || 0;
        var luku4 = parseFloat(document.getElementById("num4").value) || 0;


        var taulukko = [
            ["luku1", luku1],
            ["luku2", luku2],
            ["luku3", luku3],
            ["luku4", luku4]
        ];

      
        var summa = taulukko.reduce((acc, rivi) => acc + rivi[1], 0);
        var keskiarvo1 = summa / taulukko.length;

       
        var tuloste = "";
        taulukko.forEach(rivi => {
            tuloste += rivi[0] + " = " + rivi[1] + "<br>";
        });
        tuloste += "Ka = " + keskiarvo1.toFixed(2);

        document.getElementById("laskua1").innerHTML = tuloste;
    }
</script>

</pre></div>

