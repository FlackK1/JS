      <h3> Tehtävä 5 </h3>
      <p> Keskiarvon laskeminen yksiulotteisella taulukolla. </p>
<div class="koodi"><pre>
<div>
    <input type="number" id="num1"><br><br>
    <input type="number" id="num2"><br><br>
    <input type="number" id="num3"><br><br>
    <input type="number" id="num4"><br><br>

    <button onclick="laskeKeskiarvo()">Laske keskiarvo</button>
</div>

<p id="laskuA"></p>

<script>
    function laskeKeskiarvo() {
    
        var luku1 = parseFloat(document.getElementById("num1").value) || 0;
        var luku2 = parseFloat(document.getElementById("num2").value) || 0;
        var luku3 = parseFloat(document.getElementById("num3").value) || 0;
        var luku4 = parseFloat(document.getElementById("num4").value) || 0;

  
        var merkit = [luku1, luku2, luku3, luku4];
        var summa = merkit.reduce((a, b) => a + b, 0);
        var keskiarvo = summa / merkit.length;


        document.getElementById("laskuA").innerHTML =
            "Keskiarvo: " + keskiarvo.toFixed(2);
    }
</script>

</pre></div>

