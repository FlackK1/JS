<div class="koodi"><pre>
<h3> Tehtävä 2 </h3>
<p> Random noppakuva. </p>

<p id="noppA" class="vari1"></p>
<p id="noppateksti"></p>
<img id="js" src="" alt="Dice Image" style="cursor: pointer;" width="200">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  const KUVAT = [
    "KUVAT/arpanoppa1.jpg", 
    "KUVAT/arpanoppa2.jpg", 
    "KUVAT/arpanoppa3.jpg", 
    "KUVAT/arpanoppa4.jpg", 
    "KUVAT/arpanoppa5.jpg", 
    "KUVAT/arpanoppa6.jpg"
  ];

  function omanoppA(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  $("#js").on("click", function () {
    const randomIndex = omanoppA(0, KUVAT.length - 1);
    const img = $(this);

    img.addClass("shaking");
    setTimeout(() => img.removeClass("shaking"), 300);

    $(this).attr("src", KUVAT[randomIndex]);
    $("#noppateksti").text("Arpa " + (randomIndex + 1)); 
  });

  $(document).ready(function () {
    $("#js").attr("src", KUVAT[0]);
  });
</script>


