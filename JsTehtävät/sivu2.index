      <h3> Tehtävä 1 </h3>
      <p> Resistanssin ja rinnankytkennän laskeminen vasemmalla painikkeella/alt + vasen. </p>
<div class="koodi"><pre>
<body>
   <div id="resistorBox">Klikkaa ja laske resistanssi</div>

   <script>
      const R1 = 100;
      const R2 = 100;
      const R3 = 100;

  
      function laskeSarjakytkenta() {
         return R1 + R2 + R3;
      }

      
      function laskeRinnankytkenta() {
         return 1 / ((1 / R1) + (1 / R2) + (1 / R3));
      }


      document.addEventListener("DOMContentLoaded", () => {
         const resistorBox = document.getElementById("resistorBox");

         resistorBox.addEventListener("click", function (event) {
            if (event.altKey && event.button === 0) {

               const rinnankytkentaTulos = laskeRinnankytkenta().toFixed(5);
               this.textContent = `Rinnankytkennän tulos: ${rinnankytkentaTulos} Ω`;
            } else if (event.button === 0) {
            
               const sarjakytkentaTulos = laskeSarjakytkenta();
               this.textContent = `Sarjakytkennän tulos: ${sarjakytkentaTulos} Ω`;
            }
         });
      });
   </script>
</body>
</pre></div>



