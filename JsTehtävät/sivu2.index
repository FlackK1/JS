      <h3> Tehtävä 3 </h3>
      <p> Eri tervehdys kellon ajan mukaan. </p>
<div class="koodi"><pre>
<p id="Tervehdys"></p>

<button class="button" onclick="Tervehdys()">Tervehdys</button>

<script>
function Tervehdys() {

    if (new Date().getHours() < 10) {
        document.getElementById("Tervehdys").innerHTML = "Huomenta";
		
    } else if (new Date().getHours() < 14) {
        document.getElementById("Tervehdys").innerHTML = "Päivää";
		
    } else if (new Date().getHours() < 17) {
        document.getElementById("Tervehdys").innerHTML = "Iltapäivää";
		
    } else if (new Date().getHours() < 23) {
        document.getElementById("Tervehdys").innerHTML = "Iltaa";
		
    } else {
        document.getElementById("Tervehdys").innerHTML = "Hyvää yötä";
    }
}
</script>

