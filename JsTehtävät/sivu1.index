<p id="laskuA"></p>

<script>
    function laskeResistanssi() {
    
        var R1 = parseFloat(document.getElementById("R1").value) || 100;
        var R2 = parseFloat(document.getElementById("R2").value) || 100;
        var R3 = parseFloat(document.getElementById("R3").value) || 100;

   var Rkok = 1 / ((1 / R1) + (1 / R2) + (1 / R3));

	document.getElementById("laskuA").innerHTML = 
  "R1: " + R1 + " <br>" + 
  "R2: " + R2 + " <br>" + 
  "R3: " + R3 + " <br>" + 
  "Rkok: " + Rkok.toFixed(5);

    }

</script>

