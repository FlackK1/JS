      <h3> Tehtävä 3 </h3>
      <p> Pallon tilasuus/säde laskin. </p>
<div class="koodi"><pre>
<body>
<p>Pallon tilavuus</p>
<form id="MyForm">
    <label for="radius">Säde</label>
    <input type="text" id="radius" required>
    <label for="volume">Tilavuus</label>
    <input type="text" id="volume" readonly>
    <input type="submit" value="Laske">
</form>
<script>
function calculateVolume() {
    var radius = document.getElementById('radius').value;
    var volume = (4 / 3) * Math.PI * Math.pow(Math.abs(radius), 3);
    document.getElementById('volume').value = volume.toFixed(4);
    return false;
}

document.getElementById('MyForm').onsubmit = calculateVolume;


</script>
</body>
